
pipeline {
    agent any
	
    stages {
        stage('Test Parameter') {
            steps {
                script {
				    // 输出变量 ABC
					echo "ABC=${ABC}"
					// 输出变量 Type
					echo "Type=${Type}"

                    // 拼接 sh 脚本路径					
					SHELL_PATH="${env.WORKSPACE}/shell/testShell.sh"
					// 输出 sh 脚本路径
					echo "SHELL_PATH=${SHELL_PATH}"
					// 给脚本添加权限并运行
					sh "chmod +x ${SHELL_PATH} && ${SHELL_PATH}"
                }
            }
        }
    }
}
